# 環境模式 (development, production, test)
NODE_ENV=development

# 伺服器配置
PORT=8080
HOST=localhost

# 資料庫配置
DB_PATH=./backend/database/chat.db
DB_BACKUP_PATH=./backend/database/backups/

# JWT 安全配置 (生產環境請更換為強密碼)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
AES_KEY=your-256-bit-aes-encryption-key-change-me

# CORS 配置 (生產環境請設定具體域名)
CORS_ORIGIN=http://localhost:3000

# 文件上傳配置
UPLOAD_PATH=./backend/uploads/
MAX_UPLOAD_SIZE=10485760

# 郵件配置 (可選)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis 配置 (可選，用於會話儲存)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 雲端儲存配置 (可選)
CLOUD_STORAGE_ENABLED=false
CLOUD_PROVIDER=aws
CLOUD_BUCKET=your-bucket-name

# 監控配置 (可選)
APM_SECRET_TOKEN=your-apm-token

# 前端開發伺服器 URL
FRONTEND_URL=http://localhost:3000

# 開啟除錯模式
DEBUG=true

# 關閉某些安全限制（僅開發環境）
DISABLE_RATE_LIMIT=true